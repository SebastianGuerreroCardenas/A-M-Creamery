<div class="ui grid">
	<div class="two column row">
	<div class="column">
		<h1>Assignments</h1>

		<div class="ui top pink secondary menu">
		  <a class="item active" data-tab="first">Current</a>
		  <% if current_user.employee.role == "admin" or current_user.employee.role == "employee"%>
		  <a class="item" data-tab="second">Inactive</a>
		  <% end %>
		  <% if current_user.employee.role == "admin"%>
		  <div class="right ui item">
			  	<%= link_to "<button class='ui green basic button'>
			  <i class='icon suitcase'></i>
			  Create an Assignment
			</button>".html_safe, new_assignment_path %>
		  </div>
		  <% end %>
		</div>
		<div class="ui divider"></div>
		<div class="ui bottom tab active" data-tab="first">
		<%= render 'current_assignments_table' %>
<br/>
<br/>
<br/>
		</div>

		<% if current_user.employee.role == "admin" or current_user.employee.role == "employee"%>
			<div class="ui bottom tab" data-tab="second">
				<%= render 'past_assignments_table' %>
			</div>
			<br/>
		<% end %>

</div>
</div>
</div>



