<div class="ui grid">
	<div class="two column row">
	<div class="column">
		<h1>Stores</h1>

		<div class="ui top pink secondary menu">
		  <a class="item active" data-tab="first">Current</a>
		  <% if current_user.employee.role == "admin"%>
		  <a class="item" data-tab="second">Inactive</a>
		  <% end %>
		  <% if current_user.employee.role == "admin"%>
		  <div class="right ui item">
			  	<%= link_to "<button class='ui basic green button'>
	 						 <i class='icon food'></i>
							  Add A Store
							</button>".html_safe, new_store_path  %>
		  </div>
		  <% end %>
		</div>
		<div class="ui divider"></div>

		<div class="ui bottom tab active" data-tab="first">
		<%= render 'active_stores_table' %>
<br/>
<br/>
<br/>
		</div>

		<% if current_user.employee.role == "admin"%>
			<div class="ui bottom tab" data-tab="second">
				<%= render 'inactive_stores_table' %>
			</div>
			<br/>
		<% end %>

</div>
</div>
</div>
