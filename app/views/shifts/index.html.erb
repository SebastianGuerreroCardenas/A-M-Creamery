<div class="ui grid">
	<div class="two column row">
	<div class="column">
		<h1>Shifts</h1>

		<div class="ui top pink secondary menu">
		  <a class="item active" data-tab="first">Upcoming</a>
		  <% if can? :update, Shift  or current_user.employee.role == "employee" %>
		  <a class="item" data-tab="second">Past</a>
		  <% end %>

		  <% if can? :update, Shift %>
		  <div class="right ui item">
			  	<%= link_to "<button class='ui green basic button'>
			  <i class='icon suitcase'></i>
			  Create a Shift
			</button>".html_safe, new_shift_path %>
		  </div>
		  <% end %>
		</div>
		<div class="ui divider"></div>

		<div class="ui bottom tab active" data-tab="first">
		<%= render 'upcoming_shifts_table' %>
<br/>
<br/>
<br/>
		</div>

		<% if can? :update, Shift or current_user.employee.role == "employee" %>
			<div class="ui bottom tab" data-tab="second">
				<%= render 'past_shifts_table' %>
			</div>
			<br/>
		<% end %>

</div>
</div>
</div>